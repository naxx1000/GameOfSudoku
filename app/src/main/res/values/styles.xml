<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="actionOverflowButtonStyle">@style/Toolbar.Overflow</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textColor">@color/colorTextOnLight</item>
    </style>

    <style name="Toolbar.Overflow">
        <item name="android:tint">@color/colorTextOnLight</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/colorTextOnLight</item>
        <item name="android:fontFamily">@font/grandstander_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Drawer">
        <item name="android:textColor">@color/colorTextOnDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Game" parent="">
        <item name="fontFamily">@font/grandstander_extralight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.ToolBar">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.MyRecords">
        <item name="fontFamily">@font/grandstander_extralight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.MyRecords.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.MyRecords.Time">
        <item name="fontFamily">@font/grandstander_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.History">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.About">

    </style>

    <style name="Text.About.Hint">
        <item name="android:textColor">@color/colorTextHint</item>
    </style>

    <style name="Text.About.Button">
        <item name="android:textColor">@color/colorTextOnDark</item>
    </style>

</resources>
